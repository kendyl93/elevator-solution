{
  "name": "elevator-solution",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "proxy": "http://localhost:4000",
  "scripts": {
    "client": "cd client && npm start",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cd client && npm run test",
    "format": "prettier --check \"./src/**/*.js\"",
    "format:fix": "prettier --write \"./src/**/*.js\"",
    "lint": "eslint ./src --ext \".js,.jsx\" --max-warnings=0",
    "lint:fix": "eslint ./src --ext \".js,.jsx\" --max-warnings=0 --fix",
    "stylelint": "stylelint src/**/*.scss --cache",
    "stylelint:fix": "stylelint src/**/*.scss --cache --fix",
    "check": "npm run lint && npm run format && npm run stylelint",
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "postinstall": "concurrently \"npm run install-server\" \"npm run install-client\"",
    "server": "cd server && npm run start"
  },
  "lint-staged": {
    "src/**/{**/!(*.min).js,*.jsx,*.json,*.scss,*.css,*.md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/{**/!(*.min).js,*.jsx}": [
      "eslint -c .eslintrc --fix",
      "echo test",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged &&  npm run test",
      "pre-push": "npm run check &&  npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kendyl93/elevator-solution.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kendyl93/elevator-solution/issues"
  },
  "homepage": "https://github.com/kendyl93/elevator-solution#readme",
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "concurrently": "^4.1.1",
    "dotenv": "^8.0.0",
    "eslint": "^6.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "html-loader": "^0.5.5",
    "husky": "^3.0.4",
    "prettier": "^1.18.2"
  }
}
